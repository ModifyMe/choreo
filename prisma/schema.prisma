datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // App specific
  totalPoints   Int       @default(0)
  createdAt     DateTime  @default(now())
  
  memberships   Membership[]
  assignedChores Chore[]
  activityLogs  ActivityLog[]
  achievements  UserAchievement[]
  pushSubscriptions PushSubscription[]
  addedShoppingItems ShoppingItem[]
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Household {
  id          String       @id @default(cuid())
  name        String
  inviteCode  String       @unique
  createdAt   DateTime     @default(now())
  mode        HouseholdMode @default(STANDARD)
  members     Membership[]
  chores      Chore[]
  rewards     Reward[]
  activityLogs ActivityLog[]
  shoppingItems ShoppingItem[]
}

model Membership {
  id          String    @id @default(cuid())
  userId      String
  householdId String
  role        Role      @default(MEMBER)
  joinedAt    DateTime  @default(now())
  balance     Int       @default(0)
  isAway      Boolean   @default(false)
  currentStreak Int     @default(0)
  totalPoints Int       @default(0)
  lastChoreDate DateTime?
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@unique([userId, householdId])
}

model Chore {
  id          String    @id @default(cuid())
  householdId String
  title       String
  description String?
  points      Int
  assignedToId String?
  status      ChoreStatus @default(PENDING)
  dueDate     DateTime?
  recurrence  Recurrence?
  recurrenceData String?   // JSON string for custom days e.g. ["MON", "WED"]
  reminderTime String?   // Optional time string "HH:mm"
  steps       Json?     // Optional JSON for subtasks: [{ id, title, completed }]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  assignedTo  User?     @relation(fields: [assignedToId], references: [id])
  activityLogs ActivityLog[]
}

model Reward {
  id          String    @id @default(cuid())
  householdId String
  name        String
  description String?
  cost        Int
  stock       Int?      // Null means infinite
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  activityLogs ActivityLog[]
}

model ActivityLog {
  id          String   @id @default(cuid())
  householdId String
  userId      String
  action      String    // "CREATED", "CLAIMED", "COMPLETED", "REDEEMED"
  createdAt   DateTime  @default(now())
  proofImage  String?   // URL to the photo proof
  choreId     String?
  rewardId    String?
  timestamp   DateTime @default(now())
  metadata    Json?     // Stores snapshot data like { choreTitle, chorePoints }

  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  chore       Chore?    @relation(fields: [choreId], references: [id])
  reward      Reward?   @relation(fields: [rewardId], references: [id])
}

model Achievement {
  id          String   @id @default(cuid())
  name        String
  description String
  icon        String
  condition   String   // e.g., "CHORES_COMPLETED:5", "STREAK:7"
  
  userAchievements UserAchievement[]
}

model UserAchievement {
  id            String      @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime    @default(now())

  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}

enum Role {
  ADMIN
  MEMBER
}

enum ChoreStatus {
  PENDING
  COMPLETED
}

enum Recurrence {
  DAILY
  WEEKLY
  MONTHLY
  BI_MONTHLY
  CUSTOM
  NONE
}



model ShoppingItem {
  id          String   @id @default(cuid())
  householdId String
  name        String
  checked     Boolean  @default(false)
  addedById   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  addedBy     User      @relation(fields: [addedById], references: [id])
}

enum HouseholdMode {
  STANDARD
  ECONOMY
}
